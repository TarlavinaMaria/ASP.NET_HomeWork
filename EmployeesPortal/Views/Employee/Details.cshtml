@model EmployeePortal.Models.Employee

@{
    ViewData["Title"] = "Детали сотрудника";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 border rounded">
                    <div class="text-center mb-4">
                        <h2 class="text-primary mb-1">👤 @Model.FullName</h2>
                        <p class="text-muted">ID сотрудника: @Model.Id</p>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th class="text-muted text-start ps-3" style="width: 30%;">📧 Email:</th>
                                    <td class="fw-bold text-dark text-start ps-3"><a href="mailto:@Model.Email" class="text-decoration-none text-dark">@Model.Email</a></td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">💼 Должность:</th>
                                    <td class="fw-bold text-dark text-start ps-3">@Model.Position</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">🏢 Отдел:</th>
                                    <td class="fw-bold text-dark text-start ps-3">@Model.Department</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">🗓️ Дата приема:</th>
                                    <td class="fw-bold text-dark text-start ps-3">@Model.HireDate?.ToString("MMMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">🎂 Дата рождения:</th>
                                    <td class="fw-bold text-dark text-start ps-3">@Model.DateOfBirth?.ToString("MMMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">👔 Тип сотрудника:</th>
                                    <td class="fw-bold text-dark text-start ps-3">@Model.Type</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">⚧ Пол:</th>
                                    <td class="fw-bold text-dark text-start ps-3">@Model.Gender</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start ps-3">💰 Зарплата:</th>
                                    <td class="fw-bold text-dark text-start ps-3">$@Model.Salary?.ToString("N2")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-around mt-4">
                        <a class="btn btn-primary btn-lg px-5 py-2 rounded-pill shadow-sm" asp-controller="Employee" asp-route-id="@Model.Id" asp-action="Update">
                            <i class="bi bi-pencil-fill"></i> Обновить
                        </a>
                        <a class="btn btn-danger btn-lg px-5 py-2 rounded-pill shadow-sm" asp-controller="Employee" asp-route-id="@Model.Id" asp-action="Delete">
                            <i class="bi bi-trash-fill"></i> Удалить
                        </a>
                        <a class="btn btn-secondary btn-lg px-5 py-2 rounded-pill shadow-sm" asp-controller="Employee" asp-action="List">
                            <i class="bi bi-arrow-left-circle-fill"></i> Вернуться к списку
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>