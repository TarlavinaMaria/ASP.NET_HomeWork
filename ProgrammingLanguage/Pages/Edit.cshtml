@page
@model EditModel
@{
    ViewData["Title"] = "Edit Language";
}

<h1>Edit Language</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Language.Name"></label>
        <input asp-for="Language.Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Language.Type"></label>
        <input asp-for="Language.Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Language.Rating"></label>
        <input asp-for="Language.Rating" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

